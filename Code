import requests
from IPython.display import display, Image, Markdown
import ipywidgets as widgets

# ğŸ”‘ Replace with your actual API Key
API_KEY = '0d2727d51e6df5db0dc45f5f1873e739'

def get_weather(city):
    url = f'https://api.openweathermap.org/data/2.5/weather?q={city}&appid={API_KEY}&units=metric'
    response = requests.get(url)
    if response.ok:
        data = response.json()
        return {
            'city': city,
            'temperature': data['main']['temp'],
            'description': data['weather'][0]['description'],
            'icon': data['weather'][0]['icon']
        }
    else:
        return None

# Widgets for input and output
city_input = widgets.Text(
    value='',
    placeholder='Enter city name',
    description='City:',
    disabled=False
)

output = widgets.Output()

def on_submit(change):
    output.clear_output()
    city = change.new
    with output:
        weather = get_weather(city)
        if weather:
            display(Markdown(f"### ğŸŒ† Weather in **{weather['city']}**"))
            print(f"ğŸŒ¡ï¸ Temperature: {weather['temperature']}Â°C")
            print(f"â˜ï¸ Description: {weather['description']}")
            icon_url = f"http://openweathermap.org/img/wn/{weather['icon']}@2x.png"
            display(Image(url=icon_url))
        else:
            print("âš ï¸ City not found or error fetching data.")

# Attach event listener
city_input.observe(on_submit, names='value')

# Show widgets
display(city_input, output)
